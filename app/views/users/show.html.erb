<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<% if @user.microposts.present? %>
  <p>
    <strong>Microposts:</strong>
    <%= @user.microposts[2].content %>
  </p>
<% else %>
  <p>No posts yet!</p>
<% end %>


<%= link_to 'Edit', edit_user_path(@user) %> |
